<Window x:Class="CrudPessoasWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrudPessoasWPF"
        mc:Ignorable="d"
        Title="CRUD Pessoas" Height="120" Width="325">
    <Grid Margin="0,0,0,39">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="517">
            <MenuItem Header="Pessoas">
                <MenuItem x:Name="mniCadastrar" Header="Cadastrar" HorizontalAlignment="Left" Width="140" Click="mniCadastrar_Click"/>
                <MenuItem x:Name="mniPEE" Header="Pesquisar, editar e excluir" HorizontalAlignment="Left" Width="240" Click="mniPEE_Click"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
